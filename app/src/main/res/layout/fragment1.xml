<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <LinearLayout
                android:id="@+id/head_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ff0000"
                >

                <CheckBox
                    android:id="@+id/ew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/sys"
                    android:gravity="center"
                    android:text="扫啊扫"
                    android:textSize="10dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@drawable/edit"
                    android:drawableLeft="@mipmap/sou"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="京东闪购,问你来不来" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/xx"
                    android:gravity="center"
                    android:text="消息"
                    android:layout_marginTop="8dp"
                    android:textSize="10dp" />
            </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:id="@+id/t1"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/gouwuche2"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="京东超市"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/shequ"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="全球购"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/_neirongguanzhu"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="服装城"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/shangpinguanzhu"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="京东生鲜"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/dizhi"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="火车票机票"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:id="@+id/t6"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/yhk"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="充值中心"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t7"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/openicon_pressed"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="领京豆"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t8"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/shaidan"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="领劵"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t9"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/goldicon_pressed"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="京东金融"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/t10"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/wodehuodong"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dip"
            android:paddingTop="10dip"
            android:text="全部"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></ListView>

        <ListView
            android:id="@+id/listView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></ListView>
    </LinearLayout>


</LinearLayout>
