<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/com"
            >

            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/head_iv"
                android:gravity="center_vertical"
                android:text="登陆"
                android:textSize="20sp"
                android:textColor="@drawable/textcolor"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/orderLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/orderWaitDriveTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/ic_user_order_wait_drive"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="待付款"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderWaitReceiptTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/ic_user_order_wait_receipt"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="待收货"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderWaitCommentTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/ic_user_order_wait_comment"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="待评价"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderWaitRefundTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/ic_user_order_wait_refund"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="退款/货"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/orderWaitPayTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/wodedingdan"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="我的订单"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:id="@+id/propertyLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/propertyMoneyTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ling"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="京豆"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/propertyCardTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/ling"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="优惠卷"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/propertyVouchersTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/lingdianling"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="白条"
                android:textSize="10sp"

                />

            <TextView
                android:id="@+id/propertyRedTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/ling"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="京东小金库"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/propertyIntegralTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/wodeqianbao"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="我的钱包"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:id="@+id/olineLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/shopWaitDriveTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/shangpinguanzhu"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="商品关注"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/dianpuWaitReceiptTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/dianpuguanzhu"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="店铺关注"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/contentorderWaitCommentTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/_neirongguanzhu"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="内容收藏"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/liuWaitRefundTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/liulanjilu"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="浏览记录"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:id="@+id/aolineLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activeWaitDriveTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/wodehuodong"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="我的活动"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/shequpuWaitReceiptTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/shequ"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="社区"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/kehuorderWaitCommentTextView"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/kehufuwu"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="客户服务"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/jingdongshop"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTop="@mipmap/gouwuche2"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dip"
                android:paddingTop="10dip"
                android:text="京东超市"
                android:textSize="10sp" />
        </LinearLayout>
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            />
    </LinearLayout>




</ScrollView>
